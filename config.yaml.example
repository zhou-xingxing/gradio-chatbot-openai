# AI Chatbot Configuration
# 支持多模型配置，每个模型独立设置 API 密钥和参数

models:
  - id: "gpt-4o"
    api_key: "${API_KEY}"
    base_url: "https://api.openai.com/v1"
    supports_thinking: false

